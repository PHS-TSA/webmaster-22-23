{
  "env": {
    "browser": true,
    "es2021": true
  },
  "plugins": ["prettier"],
  "extends": ["standard-with-typescript", "plugin:prettier/recommended"],
  "overrides": [],
  "parserOptions": {
    "sourceType": "module",
    "ecmaFeatures": {
      "arrowFunctions": true,
      "classes": true,
      "templateStrings": true,
      "defaultParams": true
    },
    "ecmaVersion": "latest"
  },
  "root": true,
  "rules": {
    "no-magic-numbers": "warn",
    "no-shadow": "error",
    "no-shadow-restricted-names": "error",
    "no-dupe-keys": "error",
    "no-dupe-args": "error",
    "no-duplicate-imports": "warn",
    "no-unreachable": "warn",
    "no-invalid-regexp": "error",
    "no-native-reassign": "warn",
    "no-invalid-this": "warn",
    "no-undefined": "warn",
    "no-eq-null": "warn",
    "valid-jsdoc": "warn",
    "spaced-comment": "warn",
    "symbol-description": "warn",
    "require-jsdoc": "warn"
    // todo: https://prettier.io/docs/en/integrating-with-linters.html
  }
}
